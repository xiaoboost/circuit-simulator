@import 'variable';

.drawing-sheet {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('src/assets/img/circuit-grid.svg');
    background-color: #fff;
    background-size: 20px;
    background-position: -40px -40px;
    background-repeat: repeat;
    user-select: none;
    cursor: default;
    outline: none;

    svg {
        height: 100%;
        width: 100%;
        overflow: hidden;
        position: relative;
        stroke: Black;
        stroke-width: 2;
        stroke-linecap: round;
        fill: transparent;
    }

    &.move-map {
        cursor: url('src/assets/cursor/move-map.svg') 16 16, crosshair;
    }

