#sidebar-menu
  top 0
  left 100%
  position absolute
  background-color color-white
  opacity 0
  z-index 10
  width 20vw
  height 100%
  transform translateX(0)
  box-shadow -5px 0 15px color-shadow
  transition transform time-aside bezier-aside, opacity time-aside bezier-aside
  .st-menu
    position absolute
    visibility hidden
    transition-delay 0.4s
    width 100%
    height 100%
    transition visibility time-aside bezier-aside
    .st-menu-title
      color color-white
      font-family font-serif
      text-align center
      background-color color-blue
      margin 0
      padding 1px
      cursor default
      h1
        font-size 40px
        font-weight normal
        margin 20px
      h2
        font-size 25px
        font-weight normal
        margin 20px

#sidebar-menu.open-menu-config,
#sidebar-menu.open-add-parts
  transform translateX(-100%)
  opacity 1

#sidebar-menu.open-menu-config #menu-config
  transition-delay 0ms
  visibility visible
#sidebar-menu.open-add-parts #menu-add-parts
  transition-delay 0ms
  visibility visible

#error-tip,
#float-tool-tip
  display none
  opacity 1
  position absolute
  padding 5px
  margin 6px
  background #d9edf7
  color #3f8aaf
  font-family font-text
  box-shadow 0 0 2px color-shadow
  border-radius 3px
  text-align center
  height auto
  font-size 16px
  over-flow hidden
  user-select none
  pointer-events none

#error-tip
  font-size 18px
  display block
  transition opacity 400ms linear
  position fixed
  right 130px
  bottom 40px

#error-tip.disappear
  opacity 0
  transition opacity 1s linear

#menu-add-parts
  .parts-menu
    margin 1.4vw 2vw
    .parts-list
      height 3.5vw
      width 3.5vw
      margin 2px
      padding 0
      box-shadow 0 0 3px color-shadow
      background #f2f2f2
      border 1px solid color-gray
      border-radius 5px
      outline 0
      transition background 200ms bezier-aside
      &:hover
        background #FFFFFF
        border 1px solid #bbbbbb
      &:focus
        background #FFFFFF
        border 1px solid color-blue-Light
        box-shadow 0 0 3px color-blue-Light
      svg
        height 3.4vw
        width 3.4vw
        stroke #3B4449
        stroke-width 2
        stroke-linecap round
        fill transparent
        transform scale(0.9,0.9)
  #menu-add-parts-close
    position absolute
    width 50px
    height 50px
    transform translate(-25px,25px)
    background color-green-aside
    border-radius 50%
    box-shadow -2px 0 10px #a1a1a1;
    transition width time-aside bezier-aside, height time-aside bezier-aside, transform time-aside bezier-aside
    span:before,
    span:after
      background color-white
      content ''
      height 5px
      width 30px
      position absolute
      transition width time-aside bezier-aside
    span:before
      transform translate(10px, 22.5px) rotate(45deg)
    span:after
      transform translate(10px, 22.5px) rotate(135deg)
    &.disappear
      width 0
      height 0
      span:before,
      span:after
        width 0

#menu-config
  .st-menu-input-title
    font-family font-default
    margin 1vw
    cursor default
    span
      font-size 24px
    span:nth-child(1)
      font-family font-serif
      color color-gray-aside
      margin-right 1.5vw
  .st-menu-input-group
    font-family font-serif
    position relative
    margin 1.5vw 0 1.5vw 3.5vw
    height 40px
    input
      color #5264AE
      font-size 20px
      padding 10px 5px 3px 5px
      display inline-block
      width 10vw
      border none
      border-bottom 1px solid color-gray
      &:focus
        outline:none
      &:focus ~ .st-menu-input-bar:before
        width 10.5vw
      &:focus ~ label,
      &:valid ~ label
        top -13px
        font-size 14px
    label
      color #999999
      font-family font-text
      font-size 18px
      font-weight Lighter
      position absolute
      pointer-events none
      left 5px
      top 10px
      transition all time-label bezier-input
    .st-menu-input-bar
      position relative
      display block
      &:before
        content ''
        height 2px
        width 0
        bottom 0
        position absolute
        background #5264AE
        transition width time-input bezier-aside
    .st-menu-unit
      color #999999
      font-size 20px
      position relative
      font-weight normal
      left 10px
      cursor default